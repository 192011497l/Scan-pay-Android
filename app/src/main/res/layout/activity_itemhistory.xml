<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lawender_boarder"
        android:padding="16dp">

        <!-- Image -->

        <!-- Payment ID -->
        <TextView
            android:id="@+id/paymentIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment ID:"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

        <!-- Payment Date -->
        <TextView
            android:id="@+id/paymentDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentIdTextView"
            android:text="Payment Date:"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

        <!-- Payment Status -->
        <TextView
            android:id="@+id/paymentStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentDateTextView"
            android:text="Payment Status:"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"/>

        <!-- View Details Button -->
        <Button
            android:id="@+id/viewDetailsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentStatusTextView"
            android:text="View Details"
            android:textColor="@android:color/white"

            android:backgroundTint="@color/lavender"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>
